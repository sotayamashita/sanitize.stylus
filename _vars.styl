// root
root-box-sizing = border-box
root-cursor = default
root-font-family = sans-serif
root-font-size = 100%
root-line-height = 1.5
root-text-rendering = optimizeLegibility

// html
html-background-color = #FFFFFF
html-color = #000000
anchor-text-decoration = none
form-element-background-color = transparent
form-element-min-height = if(unitless($root-line-height), {root-line-height}em, if(unit(root-line-height) != '%', root-line-height, null))
media-element-vertical-align = middle
monospace-font-family = monospace
nav-list-style = none
selection-background-color = #B3D4FC
selection-color = invert(selection-background-color)
selection-text-shadow = none
small-font-size = 75%
table-border-collapse = collapse
table-border-spacing = 0
textarea-resize = vertical
